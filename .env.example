# SecurAI Guardian - Environment Configuration Example
# Copy this file to .env and fill in the values

# Database
DATABASE_URL=postgresql+psycopg2://securi:your_password@localhost:5432/securi_guardian
POSTGRES_PASSWORD=your_secure_password_here

# Redis
REDIS_URL=redis://localhost:6379/0

# Anthropic AI
ANTHROPIC_API_KEY=sk-ant-api-your-key-here

# GitLab Integration
GITLAB_URL=https://gitlab.com
GITLAB_ADMIN_TOKEN=glpat-your-token-here

# Application Settings
DEBUG=false
AUTO_REMEDIATE_ENABLED=false
REMEDIATION_PRIORITY_THRESHOLD=0.7

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Metrics
PROMETHEUS_MULTIPROC_DIR=/tmp

# Security
SECRET_KEY=your-secret-key-here-change-this
ALLOWED_ORIGINS=https://your-domain.com

# Email (optional for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Slack Integration (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# PagerDuty Integration (optional)
PAGERDUTY_INTEGRATION_KEY=your-integration-key
